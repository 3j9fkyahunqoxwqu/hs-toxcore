#!/usr/bin/env perl

use strict;

my $SUT = $ARGV[0] or die "Usage: run-tests <server|toxcore>";

my $server_pid;
unless ($server_pid = fork) {
   exec "dist/build/test-$SUT/test-$SUT";
}

my $client_pid;
unless ($client_pid = fork) {
   exec "dist/build/test-tox/test-tox";
}

waitpid $client_pid, 0;
kill 2, $server_pid;
